<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
      <MyProjectOutputPath Condition="$(Platform) == 'Win32'">$(SolutionDir)\Win32\$(Configuration)</MyProjectOutputPath>
      <MyProjectOutputPath Condition="$(Platform) == 'x86'">$(SolutionDir)\Win32\$(Configuration)</MyProjectOutputPath>
      <MyProjectOutputPath Condition="$(Configuration) == 'x64'"> $(SolutionDir)\$(Platform)\$(Configuration)</MyProjectOutputPath>
    </PropertyGroup>
    <ItemGroup>
        <LayoutFile Include="$(MyProjectOutputPath)\ConsoleApplication1.exe">
            <PackagePath>$(PackageLayout)\ConsoleApplication1.exe</PackagePath>
        </LayoutFile>
    </ItemGroup>
</Project>